<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Session_7_Dennis_Hilfinger.ManageCharitiesPage"
             Title="">
    <Grid 
RowDefinitions="*, 5*, *"
ColumnDefinitions="*"
VerticalOptions="Fill"
HorizontalOptions="Fill">
        <Grid 
    ColumnDefinitions="*,4*,*"
    HorizontalOptions="Fill"
    VerticalOptions="End">
            <Image 
        Source="logo_2015_full_colour.png"
        Margin="20"/>
            <Label 
        Grid.Column="1"
        FontSize="40"
        Text="MarathonSkills 2015"
        HorizontalTextAlignment="Center"
        VerticalTextAlignment="Center"
        Padding="20"/>
            <Button 
        Grid.Column="2"
        Text="Logout"
        WidthRequest="200"
        HeightRequest="50"
        Style="{StaticResource ButtonGreen}"
        Clicked="Logout"/>
        </Grid>

        <Grid
            Grid.Row="1"
            RowDefinitions="Auto, *"
            WidthRequest="1000"
            RowSpacing="10">

            <VerticalStackLayout
                Spacing="25"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                WidthRequest="700">
                <Label 
                    Text="Manage charities"
                    HorizontalOptions="Center"
                    FontSize="32"/>

                <Button
                    Clicked="AddNewCharity"
                    Text="+ Add a new charity"
                    Style="{StaticResource ButtonYellow}"
                    WidthRequest="200"
                    HeightRequest="50"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"/>

            </VerticalStackLayout>
            <CollectionView
                ItemsSource="{Binding Charities}"
                Grid.Row="1"
                WidthRequest="1000"
                x:Name="CharityCollectionView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid
                            ColumnDefinitions="2*, 2*, 8*, *"
                            ColumnSpacing="10">
                            <Image
                                Source="{Binding ImageSource}"
                                WidthRequest="100"
                                HeightRequest="100"/>
                            <Label
                                Text="{Binding CharityObj.CharityName}"
                                Grid.Column="1"
                                VerticalTextAlignment="Center"/>
                            <Label
                                Text="{Binding CharityObj.CharityDescription}"
                                Grid.Column="2"
                                VerticalTextAlignment="Center"/>
                            <Button
                                Text="Edit"
                                Style="{StaticResource ButtonGreen}"
                                Clicked="EditCharity"
                                CommandParameter="{Binding .}"
                                HeightRequest="50"
                                Grid.Column="3"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>


        <Label 
        x:Name="TimerLabel"
        Grid.Row="2"
        HorizontalOptions="Fill"
        VerticalOptions="End"
        Text="0 days 0 hours and 0 minutes until the race starts!"
        HorizontalTextAlignment="Center"
        Padding="20"
        Style="{StaticResource TimerLabel}"/>
    </Grid>
</ContentPage>